<launch>
    <arg name="decay"/>
    <arg name="area_id"/>
    <arg name="robot_id"/>

    <group if="$(eval decay == 'uniform')">
        <include file="$(find int_preservation)/launch/areas/area.launch">
            <arg name="robot_id" value="0"/>
            <arg name="area_id" value="1"/>
            <arg name="decay_rate" value="0.001"/>
